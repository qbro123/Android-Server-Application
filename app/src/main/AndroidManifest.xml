<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.drugbank">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".screens.EditAccountActivity"></activity>
        <activity android:name=".screens.DetailsPillActivity" />
        <activity android:name=".screens.RegisterActivity" />
        <activity android:name=".screens.DetailsNotificationActivity" />
        <activity android:name=".screens.LoginActivity"/>
        <activity android:name=".screens.SearchActivity" />
        <activity android:name=".screens.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>